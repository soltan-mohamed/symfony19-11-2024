    <table class="table table-striped table-hover table-bordered">
        <thead class="thead-light">
            <tr>
                <th>Nom du Foyer</th>
                <th>Adresse</th>
                <th>Gouvernorat</th>
                <th>Capacité</th>
                <th>Chambres</th>
                <th>État de la demande</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for foyer in foyers %}
                <tr>
                    <td>{{ foyer.nom }}</td>
                    <td>{{ foyer.adresse }}</td>
                    <td>{{ foyer.gouvernorat }}</td>
                    <td>{{ foyer.capacite }}</td>

                    <td>
                        {% if foyer.chambres|length > 0 %}
                            {% for chambre in foyer.chambres %}
                                <p>{{ chambre.numero }}</p> 
                            {% endfor %}
                        {% else %}
                            <p>Aucune chambre disponible</p>
                        {% endif %}
                    </td>

                    <td>
                        {% if foyer.demandesSelection|length > 0 %}
                            {% set demande = foyer.demandesSelection[0] %}

                            {% if demande.getStatut() == 'pending' %}
                                <span class="badge bg-warning text-dark">En attente</span>
                                <p>Demande № : {{ demande.id }}</p>
                            {% elseif demande.getStatut() == 'accepted' %}
                                
                                <p>Demande № : {{ demande.id }} <span class="badge bg-success">Acceptée</span></p> 
                            {% elseif demande.getStatut() == 'rejected' %}
                                <span class="badge bg-danger">Rejeté</span>
                                <p>ID de la demande : {{ demande.id }}</p>
                            {% else %}
                            <p> Demande № : {{ demande.id }} est en attente</p>
                            {% endif %}
                        {% else %}
                            <span class="badge bg-secondary">Pas de demande</span>
                        {% endif %}
                    </td>

                    <td>
                        {% if foyer.demandesSelection|length > 0 %}
                            {% set demande = foyer.demandesSelection[0] %}

                            {% if demande.getStatut() == 'En attente' %}
                                <form action="{{ path('dashboard_accepter_demande', { id: demande.id }) }}" method="POST" style="display:inline;">
                                    <button type="submit" class="btn btn-success btn-sm">Accepter</button>
                                </form>
                            {% elseif demande.getStatut() == 'accepted' %}
                            {% elseif demande.getStatut() == 'rejected' %}
                                <span class="text-danger">Demande déjà rejetée</span>
                            {% endif %}

                            <form action="{{ path('dashboard_supprimer_demande', { id: demande.id }) }}" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette demande ?');">Supprimer</button>
                            </form>
                        {% else %}
                            <span class="text-muted">Aucune demande</span>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8" class="text-center text-muted">Aucun foyer disponible.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/app2.css') }}">
{% endblock %}

{% block body %}
 <div class="wrapper">
    <form class="form-signin needs-validation" novalidate>       
      <h2 class="form-signin-heading text-center">Register</h2>
      
      {{ form_errors(registrationForm) }}
      
      {{ form_start(registrationForm) }}
      
      <div class="mb-3">
        {{ form_row(registrationForm.email, { 'attr': {'class': 'form-control', 'placeholder': 'Email Address'} }) }}
      </div>
      <div class="mb-3">
        {{ form_row(registrationForm.nom, { 'attr': {'class': 'form-control', 'placeholder': 'Last Name'} }) }}
      </div>
      <div class="mb-3">
        {{ form_row(registrationForm.prenom, { 'attr': {'class': 'form-control', 'placeholder': 'First Name'} }) }}
      </div>
      <div class="mb-3">
        {{ form_row(registrationForm.telephone, { 'attr': {'class': 'form-control', 'placeholder': 'Phone Number'} }) }}
      </div>
      <div class="mb-3">
        {{ form_row(registrationForm.adresse, { 'attr': {'class': 'form-control', 'placeholder': 'Address'} }) }}
      </div>
      <div class="mb-3">
        {{ form_row(registrationForm.plainPassword, {
          label: 'Password',
          'attr': {'class': 'form-control', 'placeholder': 'Password'}
        }) }}
      </div>
      
      <div class="mb-3 form-check">
        {{ form_row(registrationForm.agreeTerms, { 
          'label': false,
          'attr': {'class': 'form-check-input'}
        }) }}
        <label class="form-check-label" for="{{ registrationForm.agreeTerms.vars.id }}">
          Agree to terms
        </label>
      </div>

      <button type="submit" class="btn btn-lg btn-primary btn-block">Register</button>
      
      {{ form_end(registrationForm) }}
    </form>
  </div>
{% endblock %}